.container
  .page-header
    %h1 Admin - All Coupons
  .s12.l12
    .row
      .s3.l3
        = button_to "Add New Coupons", { action: "get_kohls_coupons" }, method: :get, class: "btn btn-success"
      .s3.l3
        = button_to "Delete Old Coupons", { action: "delete_kohls_coupons" }, method: :get, class: "btn btn-danger"
    %h1
      = @coupon_count
      Total Coupons
    %table.table
      %tr
        %th Image
        %th Title
        %th Description
        %th End Date
        %th Action
      = render partial: 'shared/admin_coupon', locals: { coupons: @coupons }