.page-header
  %h1 Sign in
.row
  .s6.l6.col-md-offset-3
    .well.well-lg
      = bootstrap_form_tag url: '/sign_in'  do |f|
        = f.text_field :user_name
        = f.password_field :password
        %p.text-center
          = f.submit 'Sign in', class: 'btn btn-lg btn-success'
        %p.text-center
          = link_to "Forgot password or your user name?", forgot_password_path