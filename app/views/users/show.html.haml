-provide(:title, "All Kohls Coupons Home Page | #{@user.full_name}")
.container
  %h1 
    Homepage for #{@user.full_name}
  %ul.nav.nav-tabs{'role'=>"tablist"}
    %li.active
      = link_to "Favorite", user_path(current_user)
    %li
      = link_to "Activity", user_activities_path(current_user)
    %li
      = link_to "Account Balance", new_user_transaction_path(current_user)
    %li
      %a(href="#profile" role="tab" data-toggle="tab")
        Profile
  .tab-content
    #favorite.tab-pane.active
      - if @coupons.count > 0
        .s5.l5  
          %h4 Favorite Coupons
          = render 'shared/coupon_tabs'
        .s7.l7  
          =render partial: 'shared/carousel', locals: { coupons: @cal_coupons } 
        .row
          .l12.s12
            = render 'shared/coupon_tab_content'
      - else
        %h3
          Add to Favorite Coupons to see here!