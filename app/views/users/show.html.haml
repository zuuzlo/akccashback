-provide(:title, "#{@user.user_name} Home Page")
.page-header
  %h1 
    Homepage for #{@user.user_name}
= render 'shared/user_nav_tabs'
.tab-content
  - if @coupons.count > 0
    .row
      .s5.l5  
        %h4 Favorite Coupons
        = render 'shared/coupon_tabs'
      .s7.l7  
        =render partial: 'shared/carousel', locals: { coupons: @cal_coupons }
    .coupon_header
    .row    
      = render 'shared/coupon_tab_content'
  - else
    %h3
      Add to Favorite Coupons to see here!