-provide(:title, "All Kohls Coupons Home Page | #{@user.full_name}")
.container
  %h1 
    Homepage for #{@user.full_name}
  %ul.nav.nav-tabs{'role'=>"tablist"}
    %li.active
      %a(href="#favorite" role="tab" data-toggle="tab")
        Favorite
    %li
      %a(href="#activity" role="tab" data-toggle="tab")
        Activity
    %li
      %a(href="#balance" role="tab" data-toggle="tab")
        Accout Balance
    %li
      %a(href="#profile" role="tab" data-toggle="tab")
        Profile
  .tab-content
    #favorite.tab-pane.active
      - if @coupons.count > 0
        .s5.l5  
          %h4 Favorite Coupons
          = render 'shared/coupon_tabs'
        .s7.l7  
          =render partial: 'shared/carousel', locals: { coupons: @cal_coupons } 
        .row
          .l12.s12
            = render 'shared/coupon_tab_content'
      - else
        %h3
          Add to Favorite Coupons to see here!
    #activity.tab-pane
      %h1
        Activity Summary
      %table.table
        %tr
          %th Clicks
          %th Kohls Purchases
          %th Cash Back Earned
        %tr
          %td
            = @activity.clicks
          %td
            = number_to_currency( @activity.sales_cents.to_f / 100 )
          %td
            = number_to_currency( @activity.commission_cents.to_f / 200 )
    #balance.tab-pane
      %h1
        Activity Summary
      %table.table
        %tr
          %th Date
          %th Description
          %th Amount
        %tr
          %td
            #{@activity.updated_at.strftime("%m-%d-%Y")}
          %td
            Cash back earned
          %td
            = number_to_currency( @activity.commission_cents.to_f / 200 )