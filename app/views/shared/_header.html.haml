%nav.navbar.navbar-inverse{role: 'navigation'}
  .navbar-header
    %button.navbar-toggle{type: 'button', "data-toggle" => 'collapse', "data-target" => ".navbar-ex1-collapse"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to 'All Kohls Coupons Cash Back', root_path, class: 'navbar-brand'
  .collapse.navbar-collapse.navbar-ex1-collapse 
    %ul.nav.navbar-nav
      - if logged_in?
        %li{:class => "#{'active' if current_page?(user_path(current_user))}"}=link_to "Home", user_url(current_user)
      %li.dropdown
        %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
          Categories
          %b.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
          -KohlsCategory.with_coupons.each do |cat|
            %li
              = link_to kohls_category_path(cat) do
                #{cat.name}            
      %li.dropdown
        %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
          Types
          %b.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
          -KohlsType.with_coupons.each do |typ|
            %li
              = link_to kohls_type_path(typ) do
                #{typ.name}
      %li.dropdown
        %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
          Only at Kohls
          %b.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
          -KohlsOnly.with_coupons.each do |only|
            %li
              = link_to kohls_only_path(only) do
                #{only.name} 
    %form.navbar-form.navbar-left{ action: search_coupons_path, method: "get"}
      %div.form-group
        %input.form-control{type:"text", name: "search_term", placeholder:"Search", value: "" }
      %button.btn.btn-default(type="submit") Search
    - if logged_in?  
      %ul.nav.navbar-nav.navbar-right 
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to 'Invite a Friend', '#'
            %li
              = link_to 'Sign Out', sign_out_path
            - if current_user.admin?
              %li.divider
              %li
                = link_to 'View Coupons', admin_coupons_path
              %li
                = link_to 'Create New Coupon', new_admin_coupon_path
              %li
                = link_to 'Activity', admin_activities_path
    - else
      %ul.nav.navbar-nav.navbar-right
        %li=link_to "Sign in", sign_in_path
        %li=link_to "Register", new_user_path
